#:kivy 1.8.0

<RoundedButton@Button>:
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    canvas.before:
        Color:
            rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [100,]

<ElarLayout>:
    GridLayout:
        rows: 2
        pos_hint: {'center_x': 0.5, 'center_y': 0.5 }
        size_hint: 0.2, None
        width: max(self.width, 100)
        height: self.width * 2
        RoundedButton:
            id: up_button
            background_normal: 'icons/up.png'
        RoundedButton:
            id: down_button
            background_normal: 'icons/down.png'
        